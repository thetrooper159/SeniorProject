<div class="home-page">
     <div class="col-xs-12 home-page-welcome">
          <h1 class="home-header-text" data-aos="fade-right" data-aos-duration="1250">F.A.Q.</h1><br>

<!-- Jumbotrons for sections -->
<div class="container">
	<div class="row jumbo-faq" style="text-align: center">
    <div class="modal-body">
      <table>
      <tbody>
        <tr>
          <th>Question</th>
          <th>Answer</th>
        </tr>
      {{#each general}}
      <tr>
        <td>{{question}}</td>
        <td>{{answer}}</td>
        <td><a class="btn btn-primary btn-lg faq-jumbo-button" href="#" role="button"  data-toggle="modal" data-target="#{{ code }}">Edit</a></td>
      </tr>
      {{/each}}
     </tbody>
     </table>
    </div>
	</div>
</div>

<!-- Start Modals -->

<!-- General -->
<div class="modal fade" id="general" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
	<form action="/post/post_faq.js" type="POST" id="edit-general">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title" id="exampleModalLongTitle">Edit General</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span>
			</button>
		  </div>
		  <div class="modal-body">
        <table>
        <tbody>
          <tr>
            <th>Question</th>
            <th>Answer</th>
          </tr>
        {{#each general}}
        <tr>
          <td>{{question}}</td>
          <td>{{answer}}</td>
          <td><a class="btn btn-primary btn-lg faq-jumbo-button" href="#" role="button"  data-toggle="modal" data-target="#{{ code }}">Edit</a></td>
        </tr>
				{{/each}}
       </tbody>
       </table>
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
		  </div>
		</div>
	</form>
  </div>
</div>
