   <br><br><input type="button" class="button" id="button" value="print" onClick="click()">



   <div id="firstbox"></div>
   <div id="secondbox"></div>
   <div id="thirdbox"></div>
   <div id="fourthbox"></div>
   <div id="fifthbox"></div>
   <div id="sixthbox"></div>
   <div id="seventhbox"></div>
   <div id="eightbox"></div>

<script>
var buttons = document.getElementsByClassName("button");

for (var i = 0; i < buttons.length; i++) {
  buttons[i].addEventListener('click', click, false);
}

function printData()
{
   var divToPrint=document.getElementById("linens");
   newWin= window.open("");
   newWin.document.write(divToPrint.outerHTML);
   newWin.print();
   newWin.close();
}


function click() {
  var firstbox = document.getElementById('firstbox');
  var buttonclicked = document.getElementById(this.id).linens;



  firstbox.innerHTML = "Your house name is:"  + buttonclicked;
  secondbox.innerHTML = "QTY of Sheets:"  + buttonclicked;
  thirdbox.innerHTML = "Your room number is:"  + buttonclicked;
  fourthbox.innerHTML = "QTY of Towels:"  + buttonclicked;
  fifthbox.innerHTML = "QTY of washcloths:"  + buttonclicked;
  sixthbox.innerHTML = "QTY of bathmats:"  + buttonclicked;
  seventhbox.innerHTML = "QTY of bluebags:"  + buttonclicked;
  eightbox.innerHTML = "Your request date is:"  + buttonclicked;
  this.disabled = true;
}

connection.query('SELECT familyhouse.linen.house, familyhouse.linen.room,familyhouse.linen.towels, familyhouse.linen.washcloths,familyhouse.linen.bathmats,familyhouse.linen.bluebag  FROM familyhouse.linen;');

</script>



 


