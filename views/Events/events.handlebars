<div class="events-page">
    <div class="events-landing-title">
        <h1>Events</h1>

    </div>
    <div class="container">
        <a class="btn btn-success" style="float: right; margin-bottom: 50px; color: white;" data-toggle="modal" data-target="#createEvent">Create Event</a>
        <table id="events_table" class="table display table-striped hoverable" style="margin-top: 20px;">
          	<thead>
      		<tr class="" style="color: black;">
      			<th>Event Name</th>
      			<th>Event Date</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Edit</th>
                <th>Delete</th>
      	    </tr>
      	</thead>
      	<tbody>
            {{#events}}
            <tr>
                <td>{{ title }}</td>
                <td>{{ event_date }}</td>
                <td>{{ created }}</td>
                <td>{{ last_modified }}</td>
                <td><a href="/events/{{ Id }}"><i class="fas fa-edit"></i></a></td>
                <td>
                  <a class="btn btn-primary" id="deletebtn2" style="float: right; margin-bottom: 50px; color: white;" data-toggle="modal" data-target="#deleteModal_{{ Id }}">Delete</a>
                  <!-- Modal for creating a delete button -->
                  <div class="modal fade" id="deleteModal_{{ Id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Confirmation </h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                         Are you sure?
                        </div>
                        <div class="modal-footer">
                          <button type="button"  class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" id="deletebtn" class="btn btn-primary" onclick="deleteSection('{{ Id }}')"  data-dismiss="modal">Yes Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>

            </tr>
            {{/events}}

      	</tbody>
        </table>
    </div>

    <!--Modal For Creating an Event -->
    <div class="modal fade" id="createEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <form action="/create_event" method="POST" id="createEventForm">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                 <div class="form-row">
                    <div class="col-xs-12">
                        <label for="name">Event Title</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" value="submit" class="btn btn-primary">Create</button>
              </div>
            </div>
        </form>
      </div>
  </div>
</div>

